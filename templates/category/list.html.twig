{% extends 'base.html.twig' %}

{% block title %}Liste des produits de la catégorie {{ categories.name }}{% endblock %}

{% block body %}

    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1 class="text-center">Liste des produits de la catégorie {{ categories.name }}</h1>
            </div>

            {% for product in products.data %}
                <div class="col-12 col-md-6 col-lg-4 mb-3">
                    <article class="card h-100">
                        <img src="{{ asset('assets/img/products/mini/300x300-' ~ product.images[0].name ) }}" class="card-img-top" alt="{{ product.name }}">
                        <div class="card-body">
                            <h3 class="card-title">{{ product.name }}</h3>
                            <p class="card-text">{{ product.description }}</p>
                            <a href="{{ path('app_product_details', {"slug": product.slug}) }}" class="btn btn-outline-primary">Voir les détails</a>
                        </div>
                    </article>
                </div>
            {% endfor %}

            {% set path = 'app_category_list' %}
            {% set slug = categories.slug %}
            {% set pages = products.pages %}
            {% set currentPage = products.page %}
            {% include '_partials/_pagination.html.twig' %}

        </section>
    </main>
{% endblock %}
