{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe.{% endblock %}

{% block body %}

    <section class="container">
        <div class="row">
            <div class="col mb-4">
                <h1>Réinitialisation du mot de passe.</h1>
                {{ form_start(requestPassForm) }}
                    {{ form_row(requestPassForm.email) }}
                    <button class="btn btn-outline-info mt-2" type="submit">Envoyer</button>
                {{ form_end(requestPassForm) }}
            </div>
        </div>
    </section>

{% endblock %}
